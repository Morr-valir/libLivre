{% extends 'base.html.twig' %}

{% block title %}lib livre | accueil{% endblock %}

{% block body %}
<header class="Header">
{% include "./components/navbar/navbar.html.twig" %}
{% include "./components/navbar/homeMenu.html.twig" %}
</header>
<main class="main-content" style="height: 100%;">
    <div class="container">
    <section class="info-item d-flex mb-5 mt-4">
        <figure class="mr-4">
            <img src="{{book.image}}" alt="couverture livre" class="imageSingle">
        </figure>
        <div class="description">
            <h1 class="h4 dm-font">{{book.name}}</h1>
            <p>de : {{book.author}}</p>
            <p>Disponibilité : En stock</p>
            <a href="#" class="btn btn-outline-success">Commander</a>
        </div>
    </section>
    <section class="description-book">
        <h2 class="h3 dm-font">Quatrième de couverture</h2>
        <p>
            {{book.summary}}
        </p>
    </section>
    </div>
</main>
{% include "./components/footer/footer.html.twig" %}
{% endblock %}
