{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<header class="Header">
{% include "./components/navbar/navbar.html.twig" %}
{% include "./components/slider/slider.html.twig" %}
</header>
<main class="main-content-register pt-5">
    <h1 class="text-center mb-3">Formulaire d'inscription</h1>
    <section class="d-flex justify-content-center align-items-center">
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname,{label: 'Prénom'}) }}
            {{ form_row(registrationForm.lastname,{label: 'Nom de famille'}) }}
            {{ form_row(registrationForm.email,{label: 'Adresse mail'}) }}
            {{ form_row(registrationForm.tel,{label : 'Numéro de téléphone'}) }}
            {{ form_row(registrationForm.birthDate,{label: 'date de naissance'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
            <button type="submit" class="mt-5 btn btn-primary">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </section>
</main>
{% endblock %}
